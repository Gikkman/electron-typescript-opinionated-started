{
    "compilerOptions": {
        "outDir": "_compile",
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "inlineSourceMap": true,
        "baseUrl": "./electron",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@shared/*": ["shared/*"]
          }
    },
    "include": [
        "electron/**/*"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
      }
}